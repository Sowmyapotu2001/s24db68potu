extends layout
 
block content
  h1= title
  p Welcome to #{title}
 
  - let create = `dispatch("/helmets/create")`
  button.btn(class="btn-success ml-1", onclick=create) Create
 
  - let item = results
 
  div(class="container-fluid")
    div(class="row m-1")
      each item, index in results
        div(class="col-sm-2")
          ul
            li #{item.helmet_style}
            li #{item.size}
            li #{item.price}
          button.btn(class="btn-success ml-1", onclick=`dispatch("/helmets/update?id=${item._id}")`) Update
          button.btn(class="btn-success ml-1", onclick=`dispatch("/helmets/detail?id=${item._id}")`) Detail
          button.btn(class="btn-success ml-1", onclick=`dispatch("/helmets/delete?id=${item._id}")`) Delete
 
  script.
    function dispatch(path) {
      window.location.href = path
    }
 


